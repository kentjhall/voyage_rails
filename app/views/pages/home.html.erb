
<script>

  $('#navbar h1').on('click', function(e){
      e.preventDefault();
      $('html, body').stop().animate({
         scrollTop: $('#main').offset().top
      }, 500);
  });

  $('#down_arrow, #down_arrow_text').on('click', function(e){
      e.preventDefault();
      $('html, body').stop().animate({
         scrollTop: $('#clothing_lines').offset().top
      }, 500);
  });

</script>
